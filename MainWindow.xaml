<Window x:Class="TrainingApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Программа тренировок - Силач" Height="450" Width="800">
    <Grid>
        <TextBlock Text="Программа тренировок 'Силач'" 
                   FontSize="20" 
                   FontWeight="Bold" 
                   HorizontalAlignment="Center" 
                   Margin="0,20,0,0"/>
        <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center">
            <Button Content="Настроить тренировку" Width="200" Height="50" Margin="0,10" Click="SetupWorkout_Click"/>
            <Button Content="Выход" Width="200" Height="50" Margin="0,10" Click="Exit_Click"/>
            <Button Content="Показать тренировки" Width="200" Height="50" Margin="0,10" Click="ShowWorkouts_Click"/>

        </StackPanel>
    </Grid>
</Window>
