<Window x:Class="TrainingApp.WorkoutsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Список тренировок" Height="500" Width="800">
    <Grid Margin="20">
        <StackPanel>
            <TextBlock Text="Список тренировок" FontSize="20" FontWeight="Bold" Margin="0,0,0,20" HorizontalAlignment="Center"/>
            <DataGrid x:Name="WorkoutsDataGrid" AutoGenerateColumns="True" Height="350" Margin="0,10"/>
            <Button Content="Назад" Width="100" Height="30" HorizontalAlignment="Center" Click="BackButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
